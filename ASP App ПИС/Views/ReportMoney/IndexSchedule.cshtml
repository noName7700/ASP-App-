@using Domain;
@model IEnumerable<Municipality>;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Отчёт</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">Отчёт</li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Отчёт о выполненной работе за контракт</div>
            </div>
            <div class="ibox-body">
                <div id="example-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <form class="form-horizontal" method="post">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="example-table_length">
                                    <label class="col-sm-2 col-form-label">Наименование муниципалитета:</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" name="municipality">
                                            @foreach (var mun in Model)
                                            {
                                                <option value="@mun.id">@mun.name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-10 ml-sm-auto">
                            <button href="/report/schedule" type="submit" class="btn btn-info">Создать</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
