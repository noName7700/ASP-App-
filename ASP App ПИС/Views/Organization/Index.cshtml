@using Domain;
@model IEnumerable<Organization>
@{
    var claims = Context.Request.HttpContext.User.Claims;
    var isAdmin = bool.Parse(Context.Request.HttpContext.User.FindFirst("IsAdmin").Value);
}

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Организации</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">Организации</li>
        </ol>
    </div>
    <hr>
    <form class="navbar-search" method="get">
        <div class="rel" style="display:flex; align-items:center;width:350px">
            <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
            <input value="@ViewData["search"]" name="search" class="form-control" placeholder="Наименование организации">
        </div>
    </form>
    <hr>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-body">
                <div id="example-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="example-table_length">
                            </div>
                        </div>
                    </div><div class="row">
                        @if (isAdmin)
                        {
                            <div style="margin-bottom: 17px;">
                                <a href="/journal/5">Посмотреть журнал изменений</a></div>
                        }
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable" id="example-table" cellspacing="0" width="100%" role="grid" aria-describedby="example-table_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Название
                                            <a asp-action="Index" asp-route-sort="@ViewData["NameSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Номер телефона
                                         </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            E-mail
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var org in Model)
                                    {
                                        <tr role="row" class="odd">
                                            <td>@org.name</td>
                                            <td>@org.telephone</td>
                                            <td>@org.email</td>
                                            <td>
                                                <a href="/organization/edit/@org.id"><button class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Изменить"><i class="fa fa-pencil font-14"></i></button></a>
                                                <a href="/organization/delete/@org.id"><button class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Удалить"><i class="fa fa-trash font-14"></i></button></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
