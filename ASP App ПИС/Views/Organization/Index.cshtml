@using Domain;
@model IEnumerable<Organization>
@using System.Security.Claims
@{
    var claims = Context.Request.HttpContext.User.Claims;
    var isAdmin = bool.Parse(Context.Request.HttpContext.User.FindFirst("IsAdmin").Value);
    var role = claims.Where(c => c.Type == ClaimTypes.Role).First().Value.ToString();
    var munId = int.Parse(claims.Where(c => c.Type == ClaimTypes.StateOrProvince).First().Value);
    var locId = int.Parse(claims.Where(c => c.Type == ClaimTypes.Locality).First().Value);
}
@{
    SortState sortState = SortState.NameAsc;
    string sort = Context.Request.QueryString.HasValue ? Context.Request.Query["sort"].ToString() : "";
    if (sort == "NameAsc")
        sortState = SortState.NameAsc;
    else if (sort == "NameDesc")
        sortState = SortState.NameDesc;
    else if (sort == "UserTelAsc")
        sortState = SortState.UserTelAsc;
    else if (sort == "UserTelDesc")
        sortState = SortState.UserTelDesc;
    else if (sort == "UserEmailAsc")
        sortState = SortState.UserEmailAsc;
    else if (sort == "UserEmailDesc")
        sortState = SortState.UserEmailDesc;
    else if (sort == "OrgNameAsc")
        sortState = SortState.OrgNameAsc;
    else if (sort == "OrgNameDesc")
        sortState = SortState.OrgNameDesc;
}

<style>
    .labeled {
        border-width: 0px;
    }

        .labeled:hover {
            border: 1px solid gray;
        }

    .no-border, no-border:hover {
        border-style: none;
        padding: 0px;
    }
</style>
<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Организации</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">Организации</li>
        </ol>
    </div>
    <hr>
    <div onclick="openSearches()"><span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span><i class="fa fa-angle-left arrow"></i></div>
    <div id="searches" style="display: none;">
        <form class="navbar-search" method="get" style="margin-bottom: 10px; margin-top: 10px;">
            <div class="rel" style="display:flex; align-items:center;width:350px">
                <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
                <input value="@ViewData["search"]" name="search" class="form-control" placeholder="Название организации">
            </div>
        </form>

        <form class="navbar-search" method="get" style="margin-bottom: 10px;">
            <div class="rel" style="display:flex; align-items:center;width:350px">
                <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
                <input value="@ViewData["search1"]" name="search1" class="form-control" placeholder="Номер телефона">
            </div>
        </form>

        <form class="navbar-search" method="get" style="margin-bottom: 10px;">
            <div class="rel" style="display:flex; align-items:center;width:350px">
                <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
                <input value="@ViewData["search2"]" name="search2" class="form-control" placeholder="Email">
            </div>
        </form>

        <form class="navbar-search" method="get" style="margin-bottom: 10px;">
            <div class="rel" style="display:flex; align-items:center;width:350px">
                <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
                <input value="@ViewData["search3"]" name="search3" class="form-control" placeholder="Населенынй пункт">
            </div>
        </form>
    </div>
    <hr>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-body">
                <div id="example-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="example-table_length">
                            </div>
                        </div>
                    </div><div class="row">
                        @if (isAdmin)
                        {
                            <div style="margin-bottom: 17px;">
                                <a href="/journal/5">Посмотреть журнал изменений</a></div>
                        }
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable" id="example-table" cellspacing="0" width="100%" role="grid" aria-describedby="example-table_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Название
                                            <a asp-action="Index" asp-route-sort="@ViewData["NameSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Номер телефона
                                            <a asp-action="Index" asp-route-sort="@ViewData["UserTelSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                         </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            E-mail
                                            <a asp-action="Index" asp-route-sort="@ViewData["UserEmailSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Населенный пункт
                                            <a asp-action="Index" asp-route-sort="@ViewData["OrgNameSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var org in Model)
                                    {
                                            <tr role="row" class="odd">
                                                <td>@org.name</td>
                                                <td>@org.telephone</td>
                                                <td>@org.email</td>
                                                <td>@org.Locality.name</td>
                                                <td>
                                                    @if (isAdmin || role.ToLower() == "оператор омсу")
                                                    {
                                                        <a href="/organization/edit/@org.id"><button class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Изменить"><i class="fa fa-pencil font-14"></i></button></a>
                                                        <a class="delete" href="/organization/delete/@org.id"><button class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Удалить"><i class="fa fa-trash font-14"></i></button></a>
                                                    }
                                                </td>
                                            </tr>
                                    }
                                </tbody>
                            </table>
                            @if (((PageViewModel)ViewData["pageView"]).HasPreviousPage)
                            {
                                <a asp-action="Index" asp-route-sort="@(sortState)" asp-route-page="@(((PageViewModel)ViewData["pageView"]).PageNumber - 1)" class="btn btn-outline-dark no-border">
                                    <button class="btn btn-default labeled">
                                        <span class="btn-label"><i class="fa fa-backward"></i></span>
                                    </button>
                                </a>
                            }
                            @if (((PageViewModel)ViewData["pageView"]).HasNextPage)
                            {
                                <a asp-action="Index" asp-route-sort="@(sortState)" asp-route-page="@(((PageViewModel)ViewData["pageView"]).PageNumber + 1)" class="btn btn-outline-dark no-border">
                                    <button class="btn btn-default labeled right">
                                        <span class="btn-label"><i class="fa fa-forward"></i></span>
                                    </button>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
            <script src="~/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
            <script>
    $(".delete").click(function() {
    let res = confirm("Подтвердите действие");
    if (!res) return false;
});

                function openSearches() {
                    var blocks = document.getElementById("searches");

                    if (blocks.style.display !== "none") {
                        blocks.style.display = "none";
                    }
                    else {
                        blocks.style.display = "block";
                    }
                };
</script>