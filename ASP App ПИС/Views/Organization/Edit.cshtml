@using Domain;
@model Organization;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Изменить организацию</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/organization/">Организации</a>
            </li>
            <li class="breadcrumb-item">Изменить организацию</li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Изменить данные организации</div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">Срок действия:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="name" type="text" name="name" value=@Model.name>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="telephone">Дата заключения:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="telephone" type="text" name="telephone" value=@Model.telephone>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="email">Дата заключения:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="email" type="text" name="email" value=@Model.email>
                        </div>
                    </div>

                    <input type="hidden" name="_method" value="PUT">
                    <div class="col-sm-10 ml-sm-auto">
                        <button type="submit" class="btn btn-info">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>