</script>
<script>
let has = false;
let ids = [];
$('.del-button').empty();
$('.del-checkbox').on('click', function() {
    ids = [];
    $(".del-checkbox:checked").each(function() {
        ids.push($(this).attr('id'));
    });
    if (ids.length != 0) {
        if ($('.del-button').is(':empty')) {
            $('.del-button').append('<button class="btn btn-danger">Удалить все</button>');
        }
    }
    else {
        $('.del-button').empty();
    }
});
let port = @(((IConfiguration)ViewData["config"]).GetValue("ServerPort", "7022"))
$(".del-button").on('click', function() {
    let res = confirm("Подтвердите действие");
    if (!res) return false;
    ids.forEach(id => {
        $.ajax({
            url: `https://localhost:${port}/api/Journal/delete/${id}`,
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            type: "DELETE",
            success: function(data) {
                location.reload();
            },
            error: function(result, status, err) {
                console.log("error:" + result + " status" + status + " err" + err)
            }
        })
    });
});

$("#select-all").on('click', function() {
    $('.del-checkbox').each(function() {
        ids.push($(this).attr('id'));
        $(this).prop('checked', true);
    });
    if (ids.length != 0) {
        if ($('.del-button').is(':empty')) {
            $('.del-button').append('<button class="btn btn-danger">Удалить все</button>');
        }
    }
    else {
        $('.del-button').empty();
    }
})
    
</script>
<script>
    function openSearches() {
        var blocks = document.getElementById("searches");

        if (blocks.style.display !== "none") {
            blocks.style.display = "none";
        } 
        else {
            blocks.style.display = "block";
        }
    };
</script>
