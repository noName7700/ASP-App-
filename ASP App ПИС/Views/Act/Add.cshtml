@using Domain;
@model IEnumerable<Locality>;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Добавить акт отлова</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Новый акт отлова</div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="locality">Населенный пункт:</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="locality" name="locality">
                                @foreach(var loc in Model)
                                {
                                    <option value="@loc.id">@loc.name</option>
                                }                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="datecapture">Дата отлова:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="datecapture" type="date" name="datecapture">
                        </div>
                    </div>
                    <div class="ibox-head">
                        <div class="ibox-title">Животное</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="category">Категория:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="category" type="text" name="category">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sex">Пол:</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="sex" name="sex">
                                <option value="Муж">Мужской</option>
                                <option value="Жен">Женский</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="poroda">Порода:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="poroda" type="text" name="breed">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="size">Размер:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="size" type="text" name="size">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sherst">Шерсть:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="sherst" type="text" name="wool">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="color">Окрас:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="color" type="text" name="color">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="ears">Уши:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="ears" type="text" name="ears">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="tail">Хвост:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="tail" type="text" name="tail">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="specsings">Особые приметы:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="specsings" type="text" name="specsigns">
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-10 ml-sm-auto">
                        <button class="btn btn-info" type="submit">Добавить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>