@using Domain;
@model IEnumerable<Contract_Locality>
@using System.Security.Claims;
@{
    var claims = Context.Request.HttpContext.User.Claims;
    var isAdmin = bool.Parse(Context.Request.HttpContext.User.FindFirst("IsAdmin").Value);
    var role = claims.Where(c => c.Type == ClaimTypes.Role).First().Value.ToString();
    var locId = int.Parse(claims.Where(c => c.Type == ClaimTypes.Locality).First().Value);
    var munId = int.Parse(claims.Where(c => c.Type == ClaimTypes.StateOrProvince).First().Value);
    var orgId = int.Parse(claims.Where(c => c.Type == ClaimTypes.Anonymous).First().Value);
}
@{
    SortState sortState = SortState.NameAsc;
    string sort = Context.Request.QueryString.HasValue ? Context.Request.Query["sort"].ToString() : "";
    if (sort == "NameAsc")
        sortState = SortState.NameAsc;
    else if (sort == "NameDesc")
        sortState = SortState.NameDesc;
}

<style>
    .labeled {
        border-width: 0px;
    }

        .labeled:hover {
            border: 1px solid gray;
        }

    .no-border, no-border:hover {
        border-style: none;
        padding: 0px;
    }
</style>

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Акты отлова</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="/act/">Контракты</a>
            </li>
            <li>
                Акты отлова
            </li>
        </ol>
    </div>
    <hr>
    <form class="navbar-search" method="get">
        <div class="rel" style="display:flex; align-items:center;width:350px">
            <span class="search-icon" style="margin: 0px 15px;"><i class="ti-search"></i></span>
            <input value="@ViewData["search"]" name="search" class="form-control" placeholder="Наименование населенного пункта">
        </div>
    </form>
    <hr>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-body">
                @if (isAdmin)
                {
                    <div style="margin-bottom: 17px;">
                        <a href="/journal/4">Посмотреть журнал изменений</a>
                    </div>
                }
                <div id="example-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="example-table_length">
                            </div>
                        </div>
                    </div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable" id="example-table" cellspacing="0" width="100%" role="grid" aria-describedby="example-table_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Населенный пункт
                                            <a asp-action="Index" asp-route-sort="@ViewData["NameSort"]"><img src="/img/sorted.png" alt="Сортировка" width="20"></a>
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">
                                            Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var con in Model)
                                    {
                                        // if (isAdmin || (con.organizationid == orgId))
                                        // {
                                            <tr role="row" class="odd">
                                                <td>@con.Locality.name</td>
                                                <td>
                                                    @if (isAdmin)
                                                    {
                                                        <a href="/act/@con.id">Просмотр <i class="fa fa-eye font-14"></i></a>
                                                    }
                                                    else if (con.Locality.id == locId)
                                                    {
                                                        <a href="/act/@con.id">Просмотр <i class="fa fa-eye font-14"></i></a>
                                                    }
                                                </td>
                                            </tr>
                                        // }
                                    }
                                </tbody>
                            </table>
                            @if (((PageViewModel)ViewData["pageView"]).HasPreviousPage)
                            {
                                <a asp-action="Index" asp-route-sort="@(sortState)" asp-route-page="@(((PageViewModel)ViewData["pageView"]).PageNumber - 1)" class="btn btn-outline-dark no-border">
                                    <button class="btn btn-default labeled">
                                        <span class="btn-label"><i class="fa fa-backward"></i></span>
                                    </button>
                                </a>
                            }
                            @if (((PageViewModel)ViewData["pageView"]).HasNextPage)
                            {
                                <a asp-action="Index" asp-route-sort="@(sortState)" asp-route-page="@(((PageViewModel)ViewData["pageView"]).PageNumber + 1)" class="btn btn-outline-dark no-border">
                                    <button class="btn btn-default labeled right">
                                        <span class="btn-label"><i class="fa fa-forward"></i></span>
                                    </button>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
