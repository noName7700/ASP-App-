<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Добавить задание на месяц</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="/schedule/">Планы-графики</a>
            </li>
            <li class="breadcrumb-item">
                Добавить задание на месяц
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Новый план-график</div>
            </div>
            @if (ViewData["err"] != null)
            {
                <div class="alert alert-danger alert-dismissable fade show">
                    <button class="close" data-dismiss="alert" aria-label="Close">×</button>
                    <strong>Ошибка!</strong> @ViewData["err"]
                </div>
            }
            <div class="ibox-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="start-date">Дата начала:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="start-date" type="date" name="startdate" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="end-date">Дата окончания:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="end-date" type="date" name="enddate" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="count-animal">Планируемое количество животных</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="count-animal" type="number" name="count-animal" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-10 ml-sm-auto">
                        <button class="btn btn-info" type="submit">Добавить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>