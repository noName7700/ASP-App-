@using Domain;
@model IEnumerable<TaskMonth> 

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Тюменская область</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">План-график</div>
            </div>
            <div class="ibox-body">
                <div id="example-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row"><div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="example-table_length">
                            
                            <a href="/scheduleone/add/@ViewData["id"]"><button class="btn btn-success">Добавить</button></a>
                        </div></div></div><div class="row"><div class="col-sm-12"><table class="table table-striped table-bordered table-hover dataTable" id="example-table" cellspacing="0" width="100%" role="grid" aria-describedby="example-table_info" style="width: 100%;">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">Дата начала</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">Дата окончания</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">Планируемое количество животных</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="example-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 252.7px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach(var tm in Model)
                    {
                    <tr role="row" class="odd">
                        <td>@tm.startdate.ToShortDateString()</td>
                        <td>@tm.enddate.ToShortDateString()</td>
                        <td>@tm.countanimal</td>
                        <td>
                            <a href="/scheduleone/edit/@tm.id"><button class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Изменить"><i class="fa fa-pencil font-14"></i></button></a>
                            <a class="delete" href="/scheduleone/delete/@tm.id"><button class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Удалить"><i class="fa fa-trash font-14"></i></button></a>
                        </td>
                    </tr>
                    }
                    </tbody>
                </table></div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
<script src="~/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script>
    $(".delete").click(function() {
    let res = confirm("Подтвердите действие");
    if (!res) return false;
});
</script>