@using Domain;
@model Contract;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Изменить контракт</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="/contract/">Контракты</a>
            </li>
            <li class="breadcrumb-item">Изменить контракт</li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Изменить данные контракта</div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="validityperiod">Срок действия:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="validityperiod" type="date" name="validityperiod" value=@Model.validityperiod.ToString("yyyy-MM-dd") required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="dateconclusion">Дата заключения:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="dateconclusion" type="date" name="dateconclusion" value=@Model.dateconclusion.ToString("yyyy-MM-dd") required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </div>
                    <input type="hidden" name="_method" value="PUT">
                    <div class="col-sm-10 ml-sm-auto">
                        <button type="submit" class="btn btn-info">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>