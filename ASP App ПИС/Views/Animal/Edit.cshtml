@using Domain;
@model Animal;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Изменить животное</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Новое животное</div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="cate">Категория:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="cate" type="text" name="category" value="@Model.category" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="sex">Пол:</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="sex" name="sex" required>
                                @if (@Model.sex == "Муж"){
                                    <option selected value="Муж">Мужской</option>
                                    <option value="Жен">Женский</option>
                                }
                                else {
                                    <option value="Муж">Мужской</option>
                                    <option selected value="Жен">Женский</option>
                                }
                            </select>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="poroda">Порода:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="poroda" type="text" name="breed" value="@Model.breed" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="size">Размер:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="size" type="text" name="size" value="@Model.size" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="sherst">Шерсть:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="sherst" type="text" name="wool" value="@Model.wool" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="color">Окрас:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="color" type="text" name="color" value="@Model.color" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="ears">Уши:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="ears" type="text" name="ears" value="@Model.ears" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="tail">Хвост:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="tail" type="text" name="tail" value="@Model.tail" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group row has-feedback">
                        <label class="col-sm-2 col-form-label" for="spec">Особые приметы:</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="spec" type="text" name="specsigns" value="@Model.specsings" required>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="help-block">
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <input type="hidden" name="_method" value="PUT">
                    <div class="col-sm-10 ml-sm-auto">
                        <button class="btn btn-info" type="submit">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>