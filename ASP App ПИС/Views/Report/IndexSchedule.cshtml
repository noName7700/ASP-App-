@using Domain;
@model IEnumerable<Municipality>;

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <div class="page-heading">
        <h1 class="page-title">Отчёт о выполненной работе по планам-графикам</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Отчёт</li>
        </ol>
    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Отчёт о выполненной работе по планам-графикам</div>
            </div>
            <div class="ibox-body">
                    <form class="form-horizontal" method="post">

                        <div class="form-group row">
                            <label for="nameloc" class="col-sm-2 col-form-label">Наименование населенного пункта:</label>
                            <div class="col-sm-8">
                                <select id="nameloc" class="form-control" name="municipality">
                                    @foreach (var mun in Model)
                                    {
                                        <option value="@mun.id">@mun.name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-10 ml-sm-auto">
                            <button href="/report/schedule" type="submit" class="btn btn-info">Создать</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
